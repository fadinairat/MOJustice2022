@model IEnumerable<MOE.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}
<partial name="_validationMsg" />

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            <h1 class="m-0">Categories</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item active">Categories</li>
            </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
      
<section class="content">
<div class="container-fluid">

<div class="row">
    <div class="col-6 text-start" ><h1 class="form-title">List All Categories</h1></div>
    <div class="col-6 text-right mt-3 sm-link" ><a asp-action="Create" ><i class="bi bi-plus-circle"></i> Add New Categories</a></div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArName)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ItemsPerPage)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.TypeId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ItemsPerPage)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CategoryTypes.Title)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Language.Name)
            </td>
          
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i> Edit</a> 
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-folder"></i> Details</a> 
                <a asp-route-id="@item.Id" class="btn btn-danger btn-sm" asp-action="Delete"><i class="fas fa-trash"></i> Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</Section>
